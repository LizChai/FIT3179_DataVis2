{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bar graph showing the scores of the top 5 students. This shows an example of the window transform, for how the top K (5) can be filtered, and also how a rank can be computed for each student.",
    "data": { "url": "https://raw.githubusercontent.com/LizChai/FIT3179_DataVis2/main/DataVis/data/athlete_points_lead.csv"},
    "width":"container",
    "params" : [{
        "name": "gender_selection",
        "bind":{
            "input": "select",
            "options": [
                null,
                "Female",
                "Male"
            ],
            "labels": [
                "Show All",
                "Female",
                "Male"
            ],
            "name": "Gender Selection: "
        }
    }],
    "transform": [
        {"window": [{"op": "rank","as": "rank"}],
          "sort": [{ "field": "Points", "order": "descending" }]}, 
        {"filter": "datum.rank <= 20"},
        {"filter": "gender_selection == null || datum.Gender == gender_selection"}
      ],
    "title": "Athlete Rankings",
    "encoding": {
        "x": {
            "field": "Points",
            "type": "quantitative"
        },
        "y": {
            "field": "Name",
            "type": "nominal",
            "sort": {"field": "Points", "op": "average", "order":"descending"}
        },
        "color": {
            "field": "Gender"

        },
        "tooltip": [
            {"field": "Name", "type": "nominal"},
            {"field": "Gender", "type": "nominal"},
            {"field": "Points", "type": "quantitative"},
            {"field": "Discipline", "type": "nominal"}]
        },
    "layer": [{
        "mark": "bar"
    },{
        "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 3
        },
        "encoding": {
          "text": {"field": "Points", "type": "quantitative"}
        }
    }
    
    ]
    
  }
  