{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Number of Athletes",
  "width": "container",
  "background": "#f0f0f0",
  "data": {"url": "https://raw.githubusercontent.com/LizChai/FIT3179_DataVis2/main/data/athletes_country_lead.csv"},
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "year", "field": "Year",
      "axis": {"format": "%Y", "title": "Year"}
    },
    "y": {
      "aggregate": "sum", "field": "Count", "sort":"ascending", "axis": {"title": "Number of Athletes"}
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": { "domain": [ "North America", "South America", "Europe", "Australia", "Asia" ], "range": [ "#e4710e", "#dfb52b", "#4d9159", "#1a6381", "#6b67a7"] }
    },
    "order":{"aggregate":"sum", "field":"Count", "sort": "descending"},
    "tooltip": [
      {"field": "Continent", "type": "nominal"},
      {"aggregate": "sum", "field": "Count", "type": "quantitative", "title": "Count"},
      {"field": "Year", "type": "temporal", "format": "%Y"}
    ]
  },
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "legend": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "header": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "title": {
      "font": "Oxygen",
      "fontSize": 16,
      "fontWeight": 600
    }
  }
}