{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Host Countries",
  "width":"container",
  "height":600,
  "background": "#f0f0f0",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LizChai/FIT3179_DataVis2/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LizChai/FIT3179_DataVis2/main/data/host_country_boulder.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Count",
          "type": "ordinal",
          "scale": {
            "type": "threshold",
            "domain": [2, 4, 6], 
            "range": [100, 500, 2000] }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": { "domain": [ "North America", "South America", "Europe", "Australia", "Asia" ], "range": [ "#e4710e", "#dfb52b", "#4d9159", "#1a6381", "#6b67a7"] },
          "sort":"ascending"
        },
        "opacity": { "value": 0.6 },
        "stroke": {"value": "black"},
        "tooltip": [
          {"field": "Location","type": "nominal"},
          {"field": "Country","type": "nominal"},
          {"field": "Continent","type": "nominal"},
          {"field": "Count", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "legend": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "header": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "title": {
      "font": "Oxygen",
      "fontSize": 16,
      "fontWeight": 600
    }
  }
}